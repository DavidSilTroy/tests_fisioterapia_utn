<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/user_activity_background"
    android:alpha="0.9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".UI.activities.MainActivity">

        <TextView
            android:id="@+id/tv_title_berg_scale_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_text"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_text_berg_scale_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_berg_scale_fragment" />
        <TextView
            android:id="@+id/tv_text_2_berg_scale_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_berg_scale_fragment" />

        <LinearLayout
            android:id="@+id/ll_options_berg_scale_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_berg_scale_test_options"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:paddingVertical="15dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_2_berg_scale_fragment">

            <LinearLayout
                android:id="@+id/ll_option_1_berg_scale_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_option_1_berg_scale_fragment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/unselected_circle_img"
                    />
                <TextView
                    android:id="@+id/tv_option_1_berg_sacale_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_text"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_option_2_berg_scale_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_option_2_berg_scale_fragment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/unselected_circle_img"
                    />
                <TextView
                    android:id="@+id/tv_option_2_berg_sacale_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_text"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_option_3_berg_scale_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_option_3_berg_scale_fragment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/unselected_circle_img"
                    />
                <TextView
                    android:id="@+id/tv_option_3_berg_sacale_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_text"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_option_4_berg_scale_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_option_4_berg_scale_fragment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/unselected_circle_img"
                    />
                <TextView
                    android:id="@+id/tv_option_4_berg_sacale_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_text"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_option_5_berg_scale_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_option_5_berg_scale_fragment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/unselected_circle_img"
                    />
                <TextView
                    android:id="@+id/tv_option_5_berg_sacale_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_text"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="10dp"
                    />
            </LinearLayout>

        </LinearLayout>



        <ImageButton
            android:id="@+id/btn_berg_scale_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_siguiente_text"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_options_berg_scale_fragment"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_berg_scale_fragment"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/rl_loading_berg_scale_fragment"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</FrameLayout>